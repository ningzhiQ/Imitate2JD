<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:id="@+id/home_image_sao"
            android:src="@drawable/sao_kind"/>
        <RelativeLayout
            android:layout_width="400dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_search_background"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:id="@+id/home_search1"
                android:src="@drawable/order_find"
                />
            <EditText
                android:layout_width="370dp"
                android:layout_height="30dp"
                android:id="@+id/home_edit_search"
                android:layout_marginLeft="30dp"
                android:background="@null"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/home_image_xiaoxi"
            android:src="@drawable/order_msg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/zrv"
        android:layout_width="130dp"
        android:layout_height="match_parent" />
    <ExpandableListView
        android:id="@+id/yev"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ExpandableListView>
    </LinearLayout>
</LinearLayout>