<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:id="@+id/class_back"
            android:src="@drawable/back"/>
        <RelativeLayout
            android:layout_width="400dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_search_background"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:id="@+id/home_search1"
                android:src="@drawable/order_find"
                />
            <EditText
                android:layout_width="370dp"
                android:layout_height="30dp"
                android:id="@+id/home_edit_search"
                android:layout_marginLeft="30dp"
                android:background="@null"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:id="@+id/class_image_replace"
            android:src="@drawable/kind_liner"/>
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/pull_refush_view">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycle_view"/>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>