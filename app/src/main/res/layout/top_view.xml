<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/top_titleimg"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/top_ed"
        app:layout_constraintTop_toTopOf="@+id/top_ed"
        android:src="@drawable/root"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/too_search"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/top_titleimg"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/top_ed"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_ed"
        android:src="@drawable/a4"
        android:layout_marginLeft="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/top_ed"
        android:layout_width="269dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/top_titleimg"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="68dp"
        android:layout_toEndOf="@+id/too_search"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="68dp"
        android:layout_toRightOf="@+id/too_search" />
</android.support.constraint.ConstraintLayout>